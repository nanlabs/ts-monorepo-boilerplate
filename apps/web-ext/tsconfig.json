{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "virtual:reload-on-update-in-background-script": ["./src/global.d.ts"],
      "virtual:reload-on-update-in-view": ["./src/global.d.ts"]
    }
  },
  "include": [
    "src",
    ".webext-config",
    ".webext-config/plugins/make-manifest.ts",
    ".webext-config/plugins/custom-dynamic-import.ts",
    ".webext-config/plugins/add-hmr.ts",
    "jest.setup.ts",
    "manifest.ts",
    "vite.config.ts",
    "package.json"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
