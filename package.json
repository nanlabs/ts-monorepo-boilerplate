{
  "name": "ts-monorepo-boilerplate",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "is-ci || husky install",
    "lint-staged": "lint-staged",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "storybook": "turbo run storybook --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "publish-packages": "turbo run build lint && changeset version && changeset publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "npm run lint:fix"
    ],
    "*.{json,css,sass,scss,less,html,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@nanlabs/eslint-config": "0.3.2",
    "@nanlabs/eslint-config-ts": "0.5.1",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "turbo": "^1.5.5"
  },
  "dependencies": {
    "tsup": "^6.2.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.1.2"
}
